  "private": false,
  "version": "1.0.12",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sadiki-o/react-full-year-scheduler"
  },
  "author": "Oussama Sadiki oussam.sadiki@gmail.com",
  "bugs": {
    "url": "https://github.com/sadiki-o/react-full-year-scheduler/issues"
  },
  "homepage": "https://github.com/sadiki-o/react-full-year-scheduler#readme",
  "license": "MIT",
  "main": "./dist/react-full-year-scheduler.umd.js",
  "module": "./dist/react-full-year-scheduler.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/react-full-year-scheduler.es.js",
      "require": "./dist/react-full-year-scheduler.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "scripts": {
